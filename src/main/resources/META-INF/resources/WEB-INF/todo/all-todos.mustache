{{<base}}
{{$title}}All Todos{{/title}}

{{$content}}

  <div class="container">
<h1>All Todos</h1>
<table class="table">
  <thead>
    <tr>
      <th>id</th>
      <th>Description</th>
      <th>Target Date</th>
      <th>Is Done?</th>
      <th colspan=2>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#todos}}
    <tr>
      <td>{{id}}</td>
      <td>{{description}}</td>
      <td>{{targetDate}}</td>
      <td>{{done}}</td>
      <td>
        <a href="/delete-todo/{{id}}" class="btn btn-danger">Delete</a>
      </td>
      <td>
        <a href="/update-todo/{{id}}" class="btn btn-success">Update</a>
      </td>
    </tr>
    {{/todos}}
  </tbody>
</table>

<a href="/add-todo" class="btn btn-primary">
  Add Todo
</a>


</div>

{{/content}}

{{/base}}
