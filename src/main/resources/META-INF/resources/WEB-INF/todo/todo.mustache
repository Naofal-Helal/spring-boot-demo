{{<base}}

{{$title}}Add Todo{{/title}}

{{$content}}
<div class="container">

<div class="card mt-5">
  <div class="card-body">
    <h1>Enter Todo Details</h1>
    <form action="" method="post">
      <input type="hidden" name="id" value="{{#todo}}{{id}}{{/todo}}">
      <input type="hidden" name="done" value="{{#todo}}{{done}}{{/todo}}{{^todo}}false{{/todo}}">
      <input type="hidden" name="username" value="{{#todo}}{{username}}{{/todo}}">
      <div class="form-floating mb-3">
        <input type="text" class="form-control {{#errors.description}}is-invalid{{/errors.description}}" name="description" id="description" 
          placeholder="" value="{{#todo}}{{description}}{{/todo}}">
        <label for="description">Description</label>
        {{#errors.description}}
        <div class="invalid-feedback"> {{.}} </div>
        {{/errors.description}}
      </div>
      <div class="form-floating mb-3">
        <input type="date" class="form-control {{#errors.targetDate}}is-invalid{{/errors.targetDate}}" name="targetDate" id="targetDate" 
          placeholder="" value="{{#todo}}{{targetDate}}{{/todo}}" required>
        <label for="targetDate">Target Date</label>
        {{#errors.targetDate}}
        <div class="invalid-feedback"> {{.}} </div>
        {{/errors.targetDate}}
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</div>

</div>
{{/content}}

{{/base}}
