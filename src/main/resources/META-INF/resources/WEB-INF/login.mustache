{{<base}}
{{$title}}Login Page{{/title}}

{{$content}}
  <div class="container">

<div class="col col-md-6 mx-auto">
  <div class="card mt-5">
    <div class="card-body">

      <h1 class="mb-3">Welcome to the Login Page! ðŸ‘‹</h1>

      {{#errors}}
